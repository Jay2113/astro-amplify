---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404: Not Found">
	<div class="text-center">
		<h1 class="text-6xl font-bold text-gray-800 mb-4">404</h1>
		<h2 class="text-3xl font-semibold mb-4">Page Not Found</h2>
		<p class="text-xl mb-8">Sorry, the page you're looking for doesn't exist.</p>
		<a href="/" class="inline-block bg-blue-600 text-white px-6 py-2 rounded-full hover:bg-blue-700 transition-colors">Go back home</a>
	</div>
</Layout>